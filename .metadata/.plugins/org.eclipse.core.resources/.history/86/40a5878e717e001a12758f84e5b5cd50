package org.Practice.eclipse;

import java.util.Scanner;

public class Ex3_1b {
	//센트기준 a는 달러기준이었음

	public static void main(String[] args) {
		System.out.print("Please Enter check amount(cent): ");
		
		double check=0;
		double charge=0;
		Scanner keyboard=new Scanner(System.in);
		
		check=keyboard.nextDouble();
		
	
		while(check<25) {
			System.out.print("Please enter a number greater than 25 cents: ");
			check=keyboard.nextDouble();
		}
		while(check>100) {
			System.out.print("Please enter a number lower than 1$: ");
			check=keyboard.nextDouble();
		}
		while(check%5!=0) {
			System.out.print("Please enter a number an integer multiple of 5: ");
			check=keyboard.nextDouble();
		}
		
		if(check<10) {
			charge=1;
		}
		else if(check<100) {
			charge=check*0.1;
		}
		else if(check<1000) {
			charge=5+(check*0.05);
		}
		else {
			charge=40+(check*0.01);
		}
		
		System.out.println("check is "+check+" So, cashing charge is "+charge+", Total is "+(check-charge));

	}

	
}
